{
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "42.0"
    }
  },

  "background": {
    "scripts": ["background/index.js"]
  },

  "browser_action": {
    "default_icon": {
      "38": "img/go-38.png"
    },
    "default_title": "OGS Helper",
    "default_popup": "popup/index.html"
  },

  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "linux": "Ctrl+Shift+U"
      },
      "description": "Send a 'toggle-feature' event"
    }
  },

  "content_security_policy": "script-src 'self' https://example.com; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["*://online-go.com/*"],
      "js": ["content/index.js"]
    }
  ],

  "description": "Make some little improvements to OGS to help your go",

  "icons": {
    "96": "img/icon2x.png"
  },

  "manifest_version": 2,

  "name": "OGS Helper",

  "permissions": ["webNavigation", "https://online-go.com/"],

  "version": "0.1"
}
